<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_cell_group_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_cell_group_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:textColor="#342e2e"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="左侧标题" />

    <TextView
        android:id="@+id/view_cell_group_tv_sub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="#342e2e"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/view_cell_group_tv_left"
        app:layout_constraintLeft_toRightOf="@id/view_cell_group_tv_left"
        app:layout_constraintRight_toLeftOf="@id/view_cell_group_tv_right"
        app:layout_constraintTop_toTopOf="@id/view_cell_group_tv_left"
        tools:text="副标题" />

    <TextView
        android:id="@+id/view_cell_group_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:text="右侧内容"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_cell_group_view_line"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>