<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_title_bor"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/act_title_left_rel"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:paddingLeft="18dp"
        android:paddingRight="22dp">

        <ImageView
            android:id="@+id/act_title_left_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:src="@drawable/ad_back_black" />

        <TextView
            android:id="@+id/act_title_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:gravity="center">

        <TextView
            android:id="@+id/act_title_center_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:maxLength="15"
            android:textColor="#342e2e"
            android:textSize="16sp"
            tools:text="Title Builder" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/act_title_right_rel_two"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/act_title_right_rel"
        android:paddingLeft="13dp"
        android:paddingRight="7dp">

        <TextView
            android:id="@+id/act_title_right_tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#7c7c7c" />

        <ImageView
            android:id="@+id/act_title_right_img_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/act_title_right_rel"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/act_title_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingRight="8dp"
            android:paddingBottom="3dp"
            android:textColor="#7c7c7c"
            android:textSize="13sp"
            tools:text="右侧标题" />

        <ImageView
            android:id="@+id/act_title_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp" />

    </RelativeLayout>

    <View
        android:id="@+id/act_title_view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#e9e9e9" />


</RelativeLayout>