<?xml version="1.0" encoding="utf-8"?>
<com.liudonghan.view.radius.ADConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ad_item_calendar_child_layout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">

    <TextView
        android:id="@+id/ad_item_calendar_child_tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="14"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/ad_item_calendar_child_tv_desc"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/ad_item_calendar_child_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="入住"
        android:textColor="@color/color_7c7c7c"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ad_item_calendar_child_tv_date" />

</com.liudonghan.view.radius.ADConstraintLayout>