    <attr name="liu_round_corner" format="dimension|integer" />
    <attr name="liu_round_corner_top_left" format="dimension|integer" />
    <attr name="liu_round_corner_top_right" format="dimension|integer" />
    <attr name="liu_round_corner_bottom_left" format="dimension|integer" />
    <attr name="liu_round_corner_bottom_right" format="dimension|integer" />
    <attr name="liu_stroke_color" format="color|reference" />
