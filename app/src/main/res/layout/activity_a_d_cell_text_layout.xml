<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".cell.ADCellTextLayoutActivity">

    <include layout="@layout/ad_title_builder" />

    <com.liudonghan.view.radius.ADConstraintLayout
        android:id="@+id/activity_main_ad_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/sp_12"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:liu_round_corner="6dp">


        <com.liudonghan.view.cell.ADCellTextLayout
            android:id="@+id/activity_main_cg_one"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            app:liu_left_drawable="@mipmap/ic_launcher"
            app:liu_left_drawable_height="18dp"
            app:liu_left_drawable_padding="8dp"
            app:liu_left_drawable_width="18dp"
            app:liu_left_text="不不不不"
            app:liu_left_text_bold="true"
            app:liu_left_text_color="@color/color_342e2e"
            app:liu_left_text_size="13sp"
            app:liu_line_left_margin="12dp"
            app:liu_line_right_margin="12dp"
            app:liu_right_drawable="@mipmap/ic_launcher"
            app:liu_right_drawable_height="18dp"
            app:liu_right_drawable_padding="8dp"
            app:liu_right_drawable_width="18dp"
            app:liu_right_text="进入"
            app:liu_right_text_bold="true"
            app:liu_right_text_color="@color/colorPrimary"
            app:liu_right_text_size="12sp"
            app:liu_sub_left_margin="12dp"
            app:liu_sub_text="！！！！！！" />

        <com.liudonghan.view.cell.ADCellTextLayout
            android:id="@+id/activity_main_cg_two"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/activity_main_cg_one"
            app:liu_left_drawable="@mipmap/ic_launcher"
            app:liu_left_drawable_height="18dp"
            app:liu_left_drawable_padding="8dp"
            app:liu_left_drawable_width="18dp"
            app:liu_left_text="哈哈哈哈哈"
            app:liu_left_text_color="@color/color_342e2e"
            app:liu_right_drawable="@mipmap/ic_launcher"
            app:liu_right_drawable_height="18dp"
            app:liu_right_drawable_padding="8dp"
            app:liu_right_drawable_width="18dp"
            app:liu_right_text="哈哈哈"
            app:liu_right_text_color="@color/colorPrimary" />

        <com.liudonghan.view.cell.ADCellTextLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:layout_constraintTop_toBottomOf="@id/activity_main_cg_two">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中间内容"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.liudonghan.view.cell.ADCellTextLayout>

    </com.liudonghan.view.radius.ADConstraintLayout>

    <com.liudonghan.view.cell.ADCellTextLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white"
        app:liu_round_corner="8dp"
        app:liu_left_text="圆角单元格"
        android:layout_marginRight="20dp"/>

</LinearLayout>