<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".indicatortab.ADIndicatorTabActivity">

    <include layout="@layout/ad_title_builder" />

    <com.liudonghan.view.indicator.ADIndicatorTab
        android:id="@+id/indicator_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ff7900"
        app:layout_constraintLeft_toLeftOf="parent"
        app:liu_indicator_empty_color="#aaaaaa"
        app:liu_indicator_line_color="@color/color_342e2e"
        app:liu_indicator_line_height="1dp"
        app:liu_indicator_line_width="20dp"
        app:liu_indicator_selected_color="@color/colorAccent"
        app:liu_indicator_text_size="13dp" />

</LinearLayout>