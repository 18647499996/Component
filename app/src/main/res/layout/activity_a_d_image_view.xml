<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".imageview.ADImageViewActivity">

    <include layout="@layout/ad_title_builder"/>

    <com.liudonghan.view.radius.ADImageView
        android:id="@+id/activity_main_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:liu_round_corner="8dp"
        app:liu_stroke_color="@color/colorPrimary"
        app:liu_stroke_width="1dp" />

</LinearLayout>