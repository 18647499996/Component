<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".recyclerview.ADRecyclerViewActivity">

    <include layout="@layout/ad_title_builder" />

    <com.liudonghan.view.recycler.ADRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        app:liu_layout_manager="center"
        app:liu_orientation="Horizontal" />

    <com.liudonghan.view.recycler.ADRecyclerView
        android:id="@+id/recyclerView_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liu_layout_manager="flow" />

    <com.liudonghan.view.recycler.ADRecyclerView
        android:id="@+id/recyclerView_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:liu_layout_manager="pager" />


</LinearLayout>