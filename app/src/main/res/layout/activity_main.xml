<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.liudonghan.view.radius.ADTextView
        android:id="@+id/activity_main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="12dp"
        android:text="哈哈哈哈哈"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:liu_round_corner="8dp"
        app:liu_stroke_color="@color/colorAccent"
        app:liu_stroke_width="1dp" />

    <com.liudonghan.view.voice.ADVoiceRecorderButton
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="#7c7c7c"
        android:text="开始录音"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/activity_main_tv"
        app:liu_round_corner="8dp" />

    <com.liudonghan.view.radius.ADConstraintLayout
        android:id="@+id/activity_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:background="#eb2525"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/activity_main_tv"
        app:liu_round_corner="8dp"
        app:liu_stroke_color="#000000"
        app:liu_stroke_width="2dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="啊啊啊啊啊"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买买买买买"
            app:layout_constraintLeft_toRightOf="@id/textView1"
            app:layout_constraintRight_toRightOf="parent" />

    </com.liudonghan.view.radius.ADConstraintLayout>

    <com.liudonghan.view.radius.ADButton
        android:id="@+id/activity_main_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="不不不不"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_input"
        app:liu_round_corner="8dp"
        app:liu_stroke_color="@color/colorAccent"
        app:liu_stroke_width="1dp" />


    <com.liudonghan.view.radius.ADImageView
        android:id="@+id/activity_main_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_ad_cl"
        app:liu_round_corner="8dp"
        app:liu_stroke_color="@color/colorPrimary"
        app:liu_stroke_width="1dp" />

    <com.liudonghan.view.progress.ADCircleProgress
        android:id="@+id/circle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_ad_cl"
        app:liu_finished_color="@color/color_ff7900"
        app:liu_finished_stroke_width="3dp"
        app:liu_is_auto_loading_animation="true"
        app:liu_text_color="@color/color_342e2e"
        app:liu_text_size="12sp"
        app:liu_unfinished_color="@color/color_dddddd"
        app:liu_unfinished_stroke_width="3dp" />

    <com.liudonghan.view.city.ADCityView
        android:id="@+id/activity_main_city"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:layout_constraintTop_toBottomOf="@id/activity_main_img" />

    <com.liudonghan.view.indicator.ADIndicatorTab
        android:id="@+id/indicator_tab"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/color_ff7900"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_img"
        app:liu_indicator_empty_color="#aaaaaa"
        app:liu_indicator_line_color="@color/color_342e2e"
        app:liu_indicator_line_height="1dp"
        app:liu_indicator_line_width="20dp"
        app:liu_indicator_selected_color="@color/colorAccent"
        app:liu_indicator_text_size="13dp">


    </com.liudonghan.view.indicator.ADIndicatorTab>

    <com.liudonghan.view.input.ADInputCodeView
        android:id="@+id/activity_main_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="parent" />


    <com.liudonghan.view.radius.ADConstraintLayout
        android:id="@+id/activity_main_ad_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/activity_main_btn"
        app:liu_round_corner="6dp">


        <com.liudonghan.view.cell.ADCellTextLayout
            android:id="@+id/activity_main_cg_one"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            app:liu_left_drawable="@mipmap/ic_launcher"
            app:liu_left_drawable_height="18dp"
            app:liu_left_drawable_padding="8dp"
            app:liu_left_drawable_width="18dp"
            app:liu_left_text="不不不不"
            app:liu_left_text_bold="true"
            app:liu_left_text_color="@color/color_342e2e"
            app:liu_left_text_size="13sp"
            app:liu_line_left_margin="12dp"
            app:liu_line_right_margin="12dp"
            app:liu_right_drawable="@mipmap/ic_launcher"
            app:liu_right_drawable_height="18dp"
            app:liu_right_drawable_padding="8dp"
            app:liu_right_drawable_width="18dp"
            app:liu_right_text="进入"
            app:liu_right_text_bold="true"
            app:liu_right_text_color="@color/colorPrimary"
            app:liu_right_text_size="12sp"
            app:liu_sub_left_margin="12dp"
            app:liu_sub_text="！！！！！！" />

        <com.liudonghan.view.cell.ADCellTextLayout
            android:id="@+id/activity_main_cg_two"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/activity_main_cg_one"
            app:liu_left_drawable="@mipmap/ic_launcher"
            app:liu_left_drawable_height="18dp"
            app:liu_left_drawable_padding="8dp"
            app:liu_left_drawable_width="18dp"
            app:liu_left_text="哈哈哈哈哈"
            app:liu_left_text_color="@color/color_342e2e"
            app:liu_right_drawable="@mipmap/ic_launcher"
            app:liu_right_drawable_height="18dp"
            app:liu_right_drawable_padding="8dp"
            app:liu_right_drawable_width="18dp"
            app:liu_right_text="哈哈哈"
            app:liu_right_text_color="@color/colorPrimary" />

        <com.liudonghan.view.cell.ADCellTextLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:layout_constraintTop_toBottomOf="@id/activity_main_cg_two">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中间内容"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.liudonghan.view.cell.ADCellTextLayout>

    </com.liudonghan.view.radius.ADConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>