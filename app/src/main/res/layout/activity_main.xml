<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.liudonghan.view.radius.LiuTextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="哈哈哈哈哈"
        android:textColor="#000000"
        app:liu_round_corner="8dp"
        app:liu_stroke_color="@color/colorAccent"
        app:liu_stroke_width="1dp" />

    <com.liudonghan.view.radius.LiuLinearLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center"
        app:liu_round_corner="8dp"
        app:liu_stroke_color="#000000"
        app:liu_stroke_width="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="啊啊啊啊啊" />

    </com.liudonghan.view.radius.LiuLinearLayout>

    <com.liudonghan.view.radius.LiuButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="不不不不"
        app:liu_round_corner="8dp"
        app:liu_stroke_color="@color/colorAccent"
        app:liu_stroke_width="1dp" />


    <com.liudonghan.view.radius.LiuImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:liu_round_corner="8dp"
        app:liu_stroke_color="@color/colorPrimary"
        app:liu_stroke_width="1dp" />

</LinearLayout>